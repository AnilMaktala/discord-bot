{
  "name": "amplify-discord-bots",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "start": "echo 'no start command needed'",
    "build": "yarn workspaces run build",
    "push": "yarn build && amplify push",
    "registry:start": "verdaccio --config ./verdaccio.yaml",
    "registry:publish": "lerna publish --canary --preid next --pre-dist-tag next --registry http://localhost:4873 --yes",
    "registry": "run-p registry:*"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "lerna": "^4.0.0",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.0",
    "verdaccio": "^5.1.5"
  },
  "prettier": {
    "tabWidth": 2,
    "bracketSpacing": true,
    "singleQuote": true,
    "printWidth": 80,
    "useTabs": false,
    "semi": false
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
    },
    "env": {
      "browser": false,
      "es2017": true,
      "node": true
    }
  }
}
