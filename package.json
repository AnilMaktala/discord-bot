{
  "name": "@hey-amplify/root",
  "type": "module",
  "version": "0.4.0",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "app": "pnpm --filter @hey-amplify/app",
    "bot": "pnpm --filter @hey-amplify/bot",
    "apps": "pnpm --filter \"./apps/**\"",
    "packages": "pnpm --filter \"./packages/**\"",
    "build": "pnpm packages run build",
    "dev": "pnpm packages run dev",
    "test": "pnpm --filter ./e2e run e2e"
  },
  "devDependencies": {
    "@hey-amplify/scripts": "workspace:*",
    "@hey-amplify/support": "workspace:*",
    "@hey-amplify/tsconfig": "workspace:*",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "eslint": "8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "typescript": "^4.6.3"
  },
  "prettier": {
    "tabWidth": 2,
    "bracketSpacing": true,
    "singleQuote": true,
    "printWidth": 80,
    "useTabs": false,
    "semi": false
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "prettier",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "env": {
      "browser": false,
      "node": true
    },
    "plugins": [
      "@typescript-eslint"
    ]
  },
  "packageManager": "pnpm@7.0.1"
}
