{
  "name": "discord-bot-interactions",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "version": "1.0.0",
  "main": "src/app.js",
  "license": "MIT",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon -r dotenv/config",
    "prebuild": "yarn workspace @amplify-discord-bots/app run build",
    "build": "echo 'no build necessary'"
  },
  "dependencies": {
    "@aws-sdk/client-ssm": "^3.21.0",
    "aws-sdk": "^2.935.0",
    "express": "^4.17.1",
    "fast-glob": "^3.2.5",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.1",
    "slash-commands": "^1.4.0",
    "source-map-support": "^0.5.16"
  },
  "devDependencies": {
    "dotenv": "^10.0.0",
    "esbuild": "^0.12.15",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^26.4.2",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2"
  },
  "prettier": {
    "tabWidth": 2,
    "bracketSpacing": true,
    "singleQuote": true,
    "printWidth": 80,
    "useTabs": false,
    "semi": false
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
    },
    "env": {
      "browser": false,
      "es2017": true,
      "node": true
    }
  }
}
