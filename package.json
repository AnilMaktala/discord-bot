{
  "name": "@hey-amplify/root",
  "version": "0.1.1",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "start": "echo 'no start command needed'",
    "app": "pnpm --filter @hey-amplify/app",
    "build": "pnpm run build --filter ./packages --parallel",
    "dev": "pnpm run dev --filter ./packages --parallel",
    "push": "scripts/push",
    "registry": "verdaccio --listen 4000 --config ./scripts/verdaccio.yaml"
  },
  "devDependencies": {
    "@aws-sdk/client-ssm": "^3.54.1",
    "dotenv": "^14.3.2",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.6.0",
    "turbo": "^1.1.9",
    "verdaccio": "^5.8.0"
  },
  "prettier": {
    "tabWidth": 2,
    "bracketSpacing": true,
    "singleQuote": true,
    "printWidth": 80,
    "useTabs": false,
    "semi": false
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2022
    },
    "env": {
      "browser": false,
      "es2017": true,
      "node": true
    }
  },
  "packageManager": "pnpm@6.32.3"
}
