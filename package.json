{
  "name": "@hey-amplify/root",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "echo 'no start command needed'",
    "app": "yarn workspace @hey-amplify/app",
    "dev": "yarn app dev",
    "push": "scripts/push"
  },
  "devDependencies": {
    "@aws-sdk/client-ssm": "^3.48.0",
    "dotenv": "^14.3.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.4.0",
    "verdaccio": "^5.2.2"
  },
  "prettier": {
    "tabWidth": 2,
    "bracketSpacing": true,
    "singleQuote": true,
    "printWidth": 80,
    "useTabs": false,
    "semi": false
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2021
    },
    "env": {
      "browser": false,
      "es2017": true,
      "node": true
    }
  }
}
