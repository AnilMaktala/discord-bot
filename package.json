{
  "name": "@hey-amplify/root",
  "version": "0.1.1",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "echo 'no start command needed'",
    "app": "pnpm --filter @hey-amplify/app",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "push": "scripts/push",
    "registry": "verdaccio --listen 4000 --config ./scripts/verdaccio.yaml"
  },
  "devDependencies": {
    "@aws-sdk/client-ssm": "^3.48.0",
    "dotenv": "^14.3.2",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "turbo": "^1.1.6",
    "verdaccio": "^5.2.2"
  },
  "prettier": {
    "tabWidth": 2,
    "bracketSpacing": true,
    "singleQuote": true,
    "printWidth": 80,
    "useTabs": false,
    "semi": false
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2022
    },
    "env": {
      "browser": false,
      "es2017": true,
      "node": true
    }
  }
}
