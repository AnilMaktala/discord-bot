{
  "name": "@hey-amplify/root",
  "type": "module",
  "version": "0.1.1",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "start": "echo 'no start command needed'",
    "app": "pnpm --filter @hey-amplify/app",
    "bot": "pnpm --filter @hey-amplify/bot",
    "packages": "pnpm run --filter ./packages --parallel",
    "build": "pnpm run build --filter ./packages --parallel",
    "dev": "pnpm run dev --filter ./packages --parallel",
    "push": "scripts/push",
    "test": "pnpm run test --filter ./e2e",
    "registry": "verdaccio --listen 4000 --config ./scripts/verdaccio.yaml"
  },
  "devDependencies": {
    "@hey-amplify/tsconfig": "workspace:*",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "dotenv": "^14.3.2",
    "eslint": "7",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.6.0",
    "typescript": "^4.7.0-dev.20220420"
  },
  "prettier": {
    "tabWidth": 2,
    "bracketSpacing": true,
    "singleQuote": true,
    "printWidth": 80,
    "useTabs": false,
    "semi": false
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "prettier",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "env": {
      "browser": false,
      "node": true
    },
    "plugins": [
      "@typescript-eslint"
    ]
  },
  "packageManager": "pnpm@6.32.3"
}
